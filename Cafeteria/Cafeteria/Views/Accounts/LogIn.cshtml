@model Cafeteria.Models.User

@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hà Minh - Trang chủ</title>
    <link rel="stylesheet" href="../css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&family=Marck+Script&display=swap"
          rel="stylesheet" />
</head>
<body>
    <main>
        <section class="sign-in">
            <div class="pic-area">
                <div class="pic-area-text">
                    <div id="login-box">
                        @using (Html.BeginForm("LogIn", "Accounts", FormMethod.Post))
                        {
                            if (ViewBag.LogInStatus != null && ViewBag.LogInStatus == 0)
                            {
                                <div class="w3-red">
                                    <p>Email hoặc mật khẩu không trùng khớp!</p>
                                </div>
                            }

                            <div class="container">
                                <label for="uname"><b>Email</b></label><br />
                                @Html.TextBoxFor(m => m.UserEmail, new {@placeholder = "Nhập email"})
                                <br />

                                <label for="psw"><b>Mật khẩu</b></label><br />
                                @Html.TextBoxFor(m => m.Password, new {@placeholder = "Nhập mật khẩu"})
                                
                                <div id="username-display"></div>
                                <button class="btn-order" id="login-btn">Đăng nhập</button>
                            </div>
                        }
                    </div>
                    <div class="icons">
                        <a href="#!">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#!">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="#!">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#!">
                            <i class="fab fa-snapchat-square"></i>
                        </a>
                    </div>
                </div>
                <div class="copyright">&copy; Copyright 2023</div>
            </div>
        </section>
    </main>
    <script src="../js/script.js"></script>
    <script src="https://kit.fontawesome.com/c057664144.js"
            crossorigin="anonymous"></script>
</body>
</html>