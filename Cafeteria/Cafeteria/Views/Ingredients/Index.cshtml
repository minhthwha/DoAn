@model IEnumerable<Cafeteria.Models.Ingredient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý nguyên vật liệu</h1>
<p>
    <a asp-action="Create">Thêm nguyên vật liệu mới</a>
</p>
<table class="w3-table w3-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IngredientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalculationUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExportedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalculationUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExportedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IngredientId">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.IngredientId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.IngredientId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
