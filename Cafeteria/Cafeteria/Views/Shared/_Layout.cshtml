<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hà Minh - Trang chủ</title>
    <link rel="stylesheet" href="../css/site.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&family=Marck+Script&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        table, th, td {
            border: 3px solid white;
            border-collapse: collapse;
        }
    </style>
  </head>
  <body>
    <header>
      <div class="second-header">
        <div class="menu-btn">
          <span class="menu-btn__burger"></span>
        </div>
        <nav class="nav">
          <ul class="menu-nav">
            <li class="menu-nav__item">
              <a class="logo menu-nav__link" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="../img/coffee-shop.png" />
                <span class="logo-first">
                    Hà
                </span>
                <span class="logo-last">
                    Minh
                </span>
              </a>
            </li>
            <li class="menu-nav__item">
              <a class="sign-in menu-nav__link" asp-area="" asp-controller="Accounts" asp-action="LogIn">
                <i class="fa fa-user" aria-hidden="true"></i>
                Đăng nhập
              </a>
              <span class="menu-nav__link" id="slash">/</span>
              <a class="sign-up menu-nav__link" asp-area="" asp-controller="Accounts" asp-action="SignUp">
                Đăng ký
              </a>
            </li>
            <br />
            <li class="menu-nav__item active">
                <a class="menu-nav__link" asp-area="" asp-controller="Home" asp-action="Index"> 
                    Trang chủ 
                </a>
            </li>
            <li class="menu-nav__item">
                <a class="menu-nav__link" asp-area="" asp-controller="Menu" asp-action="Index">
                    Thực đơn 
                </a>
            </li>
            <li class="menu-nav__item">
                <a class="menu-nav__link" asp-area="" asp-controller="Home" asp-action="Privacy">
                    Về chúng tôi 
                </a>
            </li>
            <li class="menu-nav__item">
                <a class="menu-nav__link" asp-area="" asp-controller="Home" asp-action="News">
                    Tin tức 
                </a>
            </li>
            <li class="menu-nav__item">
                <a class="menu-nav__link" asp-area="" asp-controller="Bills" asp-action="Search">
                    Xem đơn hàng 
                </a>
            </li>
            <li class="menu-nav__item">
              <a class="menu-nav__link cart__openBtn" asp-area="" asp-controller="Bills" asp-action="Cart">
                <i class="fa fa-cart-plus" aria-hidden="true"></i>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <script src="../js/script.js"></script>
    <script
      src="https://kit.fontawesome.com/c057664144.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

<!-- Allow to use session in Cart view -->
@RenderSection("Scripts", required:false)
